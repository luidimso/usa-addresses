{
  "name": "address-search-app",
  "version": "1.0.0",
  "description": "An Electron-based desktop application for searching a large, local U.S. address dataset stored in an SQLite database.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.luidimso.addresssearchapp",
    "files": [
      "**/*"
    ],
    "extraResources": [
      "addresses.db"
    ],
    "asarUnpack": [
      "**/node_modules/sqlite3/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "appimage"
    }
  }
}
